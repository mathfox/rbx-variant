{
	"compilerOptions": {
		// required
        "noLib": true,
        "strict": true,
		"downlevelIteration": true,
        "forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
        "target": "ESNext",
		"moduleDetection": "force",
		"typeRoots": ["node_modules/@rbxts"],
		// configurable
		"rootDir": "src",
		"outDir": "out",
		"declaration": true
	}
}
