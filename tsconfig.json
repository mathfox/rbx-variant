{
	"compilerOptions": {
		// required
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"noLib": true,
		"forceConsistentCasingInFileNames": true,
		"moduleDetection": "force",
		"target": "ESNext",
		"typeRoots": ["node_modules/@rbxts"],
		// configurable
		"rootDir": "src",
		"outDir": "out",
		"plugins": [
			{
				"transform": "rbxts-transformer-services"
			}
		]
	}
}
